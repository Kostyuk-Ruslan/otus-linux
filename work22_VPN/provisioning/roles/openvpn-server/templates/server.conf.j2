mode server
proto {{ openvpn_proto }}
tls-server
port {{ openvpn_port }}
dev {{ openvpn_dev }}
server {{ openvpn_server_net }} {{ openvpn_server_mask }}
push "topology subnet"
#ifconfig {{ openvpn_ifconfig_ip }} {{ openvpn_ifconfig_mask }}
#push "route-gateway {{ openvpn_gateway }}
#ifconfig-pool {{ openvpn_ifconfig_pool }}
management localhost 7505
ca /etc/openvpn/server/3.0.7/pki/ca.crt
cert /etc/openvpn/server/3.0.7/pki/issued/server.crt
key /etc/openvpn/server/3.0.7/pki/private/server.key
dh /etc/openvpn/server/3.0.7/pki/dh.pem
comp-lzo
cipher AES-128-CBC
client-to-client
max-clients 32
client-config-dir /etc/openvpn/ccd
#client-connect /etc/openvpn/scripts/client-up
#client-disconnect /etc/openvpn/scripts/client-down
log-append /var/log/openvpn/openvpn.log
status /var/log/openvpn/openvpn-status.log
verb 3

# -= TEST =-
push  "{{ openvpn_routes }}"
